&kp LSHFT         &z_tmux 12 Z  &kp X            &kp C            &v_vim 13 V    &kp B          &kp RIGHT_ARROW  &kp N       &kp M          &kp COMMA         &kp DOT            &kp SLASH             &kp RIGHT_SHIFT
&kp C_MUTE        &kp LCTRL     &kp LEFT_ALT     &kp LEFT_GUI     &lth 9 SPACE   &lth 11 ENTER  &kp ENTER        &sk RSHIFT  &lth 10 SPACE  &kp BACKSPACE     &kp C_VOLUME_DOWN  &kp C_VOLUME_UP
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOL_DN>;
            display-name = "Base";
